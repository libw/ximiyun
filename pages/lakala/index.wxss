.banner {
  display: block;
}

.moreBanner {
  width: 100%;
  height: 484rpx;
  /* background-color: rgb(117, 72, 72); */
}

.advantageContent {
  padding: 0 16rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding-bottom: 40rpx;
}

.advantageContentPart {
  width: 30%;
  box-sizing: border-box;
  padding: 8rpx;
  /* background-color: #ccc; *//* border: 1px solid #000; */
  margin-bottom: 12rpx;
}

.advantageContentPart::before {
  content: "";
  display: inline-block;
  padding-bottom: 10%;
}

.advantageImgBox {
  width: 60%;
  margin: 0 auto;
  /* background-color: #000 */
}

.advantageImgBox::before {
  content: "";
  display: inline-block;
  padding-bottom: 100%;
}

.advantageImg {
  /* display: block; */
  background: #f2f2f2;
  width: 100%;
  height: 120rpx;
}

.advantageText {
  font-size: 24rpx;
  display: block;
  text-align: center;
  line-height: 24rpx;
  height: 24rpx;
  margin-top: 10rpx;
}

.productBox {
  display: flex;
  padding: 0 20rpx;
  padding-bottom: 40rpx;
  background-color: rgb(126, 206, 244);
  justify-content: space-around;
  padding-top: 60rpx;
}
.productIconBox{
  width: 72rpx;
  margin: 0 auto;
}
.productImg{
  width: 240rpx;
  height: 300rpx;
}
.productWord{
  width: 44%;
}
.productTitle{
  width:340rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  display: block;
  text-align: center;
  margin-bottom: 36rpx;
  margin: 0 auto;
}
.productText{
  width:340rpx;
  font-size: 22rpx;
  line-height: 38rpx;
  display: block;
  margin: 0 auto;
}
.productIconUl{
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}
.productIcon{
  width: 45rpx;
  height: 45rpx;
  margin: 0 auto;
  display: block;
}
.productIconText{
  font-size: 18rpx;
  display: block;
  text-align: center;
}